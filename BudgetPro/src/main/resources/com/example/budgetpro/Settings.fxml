<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.budgetpro.pages.Settings"
            prefHeight="700.0" prefWidth="900.0"
            styleClass="page-root">

    <!-- EN-TETE -->
    <top>
        <VBox styleClass="settings-header">
            <Label text="Mon Profil" styleClass="settings-header-title"/>
            <Label text="Gérez vos informations et préférences" styleClass="settings-header-subtitle"/>
        </VBox>
    </top>

    <!-- CONTENU -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="settings-scroll">
            <VBox spacing="20" styleClass="settings-content">

                <!-- LIGNE 1 : Carte profil + Stats -->
                <HBox spacing="20">

                    <!-- CARTE PROFIL -->
                    <VBox spacing="20" styleClass="card" HBox.hgrow="ALWAYS">

                        <HBox spacing="20" alignment="CENTER_LEFT">
                            <!-- Avatar -->
                            <StackPane>
                                <Circle radius="50" styleClass="avatar-circle"/>
                                <Label fx:id="avatarLabel" text="AD" styleClass="avatar-label"/>
                            </StackPane>

                            <!-- Infos utilisateur -->
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label fx:id="nomLabel" text="..." styleClass="profile-name"/>
                                <Label fx:id="emailLabel" text="..." styleClass="profile-info"/>
                                <Label fx:id="telephoneLabel" text="..." styleClass="profile-info"/>
                                <Label fx:id="ageLabel" text="..." styleClass="profile-info"/>
                            </VBox>
                        </HBox>

                        <Button text="Editer le Profil"
                                onAction="#handleModifierProfil"
                                maxWidth="Infinity"
                                styleClass="btn-primary"/>
                    </VBox>

                    <!-- STATS -->
                    <VBox spacing="12" prefWidth="220">

                        <VBox spacing="4" styleClass="stat-mini-card">
                            <Label text="Solde Actuel" styleClass="stat-mini-label"/>
                            <Label fx:id="soldeLabel" text="0 XOF" styleClass="stat-mini-value-purple"/>
                        </VBox>

                        <VBox spacing="4" styleClass="stat-mini-card">
                            <Label text="Dépenses ce mois" styleClass="stat-mini-label"/>
                            <Label fx:id="depensesLabel" text="0 XOF" styleClass="stat-mini-value-red"/>
                        </VBox>

                        <VBox spacing="4" styleClass="stat-mini-card">
                            <Label text="Revenus ce mois" styleClass="stat-mini-label"/>
                            <Label fx:id="revenusLabel" text="0 XOF" styleClass="stat-mini-value-green"/>
                        </VBox>

                    </VBox>
                </HBox>

                <!-- SECTION PREFERENCES -->
                <VBox spacing="0" styleClass="card">

                    <Label text="Préférences" styleClass="section-title"/>

                    <HBox alignment="CENTER_LEFT" styleClass="pref-row">
                        <Label text="Mode Sombre" HBox.hgrow="ALWAYS" styleClass="pref-label"/>
                        <CheckBox fx:id="darkModeToggle" onAction="#handleDarkModeToggle"/>
                    </HBox>

                </VBox>

                <!-- SECTION ACTIONS -->
                <VBox spacing="12" styleClass="card">

                    <Label text="Actions" styleClass="section-title"/>

                    <HBox spacing="12">
                        <Button text="Changer le Mot de Passe"
                                onAction="#handleChangerMotDePasse"
                                HBox.hgrow="ALWAYS" maxWidth="Infinity"
                                styleClass="btn-primary"/>
                        <Button text="Exporter les Données"
                                onAction="#handleExporter"
                                HBox.hgrow="ALWAYS" maxWidth="Infinity"
                                styleClass="btn-primary"/>
                    </HBox>

                    <Button text="Se Déconnecter"
                            onAction="#handleDeconnexion"
                            maxWidth="Infinity"
                            styleClass="btn-warning"/>

                    <Label text="Supprimer le compte"
                           onMouseClicked="#handleSupprimerCompte"
                           styleClass="link-danger"
                           maxWidth="Infinity"
                           alignment="CENTER"/>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>