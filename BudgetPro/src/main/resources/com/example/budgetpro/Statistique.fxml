<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.budgetpro.pages.Statistique"
            prefHeight="700.0" prefWidth="1000.0"
            styleClass="page-root">

    <!-- EN-TÊTE -->
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="page-header">
            <Label text="Statistiques et Graphiques" styleClass="page-header-title"/>
        </HBox>
    </top>

    <!-- GRAPHIQUES -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="false" styleClass="charts-scroll">
            <VBox spacing="20" styleClass="charts-content">

                <!-- LIGNE 1 : Pie Chart + Bar Chart -->
                <HBox spacing="20">

                    <ScrollPane fitToWidth="true"
                                hbarPolicy="NEVER"
                                vbarPolicy="AS_NEEDED"
                                HBox.hgrow="ALWAYS"
                                styleClass="chart-card-scroll">
                        <VBox spacing="10" styleClass="chart-card">
                            <Label text="Répartition des Dépenses par Catégorie"
                                   styleClass="label-bold"/>
                            <PieChart fx:id="pieChart"
                                      prefHeight="300"
                                      legendVisible="true"
                                      legendSide="BOTTOM"
                                      labelsVisible="true"/>
                        </VBox>
                    </ScrollPane>

                    <VBox spacing="10" styleClass="chart-card" HBox.hgrow="ALWAYS">
                        <Label text="Dépenses Hebdomadaires" styleClass="label-bold"/>
                        <BarChart fx:id="barChart" prefHeight="300" legendVisible="false">
                            <xAxis><CategoryAxis label="Jours"/></xAxis>
                            <yAxis><NumberAxis label="Montant (XOF)"/></yAxis>
                        </BarChart>
                    </VBox>

                </HBox>

                <!-- LIGNE 2 : Line Chart -->
                <VBox spacing="10" styleClass="chart-card">
                    <Label text="Tendance Mensuelle des Revenus et Dépenses" styleClass="label-bold"/>
                    <LineChart fx:id="lineChart" prefHeight="250" legendVisible="true">
                        <xAxis><CategoryAxis label="Mois"/></xAxis>
                        <yAxis><NumberAxis label="Montant (XOF)"/></yAxis>
                    </LineChart>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>